<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateIngredients">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/c_defect_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_new_ingredient"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Ingrediente"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/b_add_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÃ±adir"
                android:backgroundTint="@color/anaranjado"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:background="@color/anaranjado"
            android:textColor="@color/white"
            android:padding="5dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/r_show_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

        </ScrollView>


    </LinearLayout>

</androidx.cardview.widget.CardView>